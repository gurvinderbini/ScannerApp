<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScannerApp.Views.ScannerPage"
             Title="Scanner">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="{Binding Message}"
                VerticalOptions="Start" FontSize="20" FontAttributes="Bold" TextColor="DodgerBlue"
                HorizontalOptions="CenterAndExpand" />
            <Button  Text="Click here to Scan App" VerticalOptions="CenterAndExpand" BackgroundColor="DodgerBlue"
                     TextColor="White"
                     HorizontalOptions="CenterAndExpand" Command="{Binding ScanCommand}"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>