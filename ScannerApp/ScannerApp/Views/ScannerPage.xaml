<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScannerApp.Views.ScannerPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label Text="Welcome to Scanner App"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button  Text="Click here to Scan App" VerticalOptions="Center" 
                     HorizontalOptions="CenterAndExpand" Command="{Binding ScanCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>